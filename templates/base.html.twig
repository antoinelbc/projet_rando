<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
        <meta name="robots" content="noindex" />
        <title>{% block title %}Pyrénnées Rando Club{% endblock %}</title>
         {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/styles.css') }}" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"/>
        {{ encore_entry_link_tags("app") }}
        {% endblock %}
    </head>
    <body>
        {% include 'template-parts/header.html.twig' %}
    <main>
        {% block body %} 
        
        {% endblock %}
    </main>
        {% include 'template-parts/footer.html.twig' %} 
        
        {% for message in app.flashes('success') %}
        <div class="alert-success">
            {{ message }}
        </div>
        {% endfor %}
        
        {% block javascripts %}
        <script src="{{ asset('assets/scripts/sticky_navbar.js') }}"></script>
        <script src="{{ asset('assets/scripts/hamburger_menu.js') }}"></script>
        {% endblock %}
    
    </body>
</html>
