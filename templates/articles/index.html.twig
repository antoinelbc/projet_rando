{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    {% for article in articles %}
    <div class="article-short">
        <div class="article-short_title">
            {{ article.title }}
        </div>
        <div class="article-short_date">
            {{ article.publishedDate ? article.publishedDate|date('d-m-Y', 'Europe/Paris') : '' }}
        </div>
        <div class="article-show_button">
        <a href="{{ path('app_articles_show', {'id': article.id}) }}">Voir l'article</a>

                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_articles_edit', {'id': article.id}) }}">Modifier</a>
                    {% endif %}
                    {% else %}        
                <span colspan="5">Aucun article trouvé</span>
        </div>
    </div>
    {% endfor %}
    
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_articles_new') }}">Créer un nouvel article</a>
    {% endif %}
    

