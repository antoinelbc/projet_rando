{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Published_date</th>
                <td>{{ article.publishedDate ? article.publishedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ article.user.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_articles_index') }}">back to list</a>

    <a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>

    {{ include('articles/_delete_form.html.twig') }}

    <h2>Commentaires</h2>

    {% for comment in article.comment %}
        <p>{{comment.content}}</p>
        <p>{{comment.user.username}}</p>
        <a href="{{ path('app_comments_edit', {'id': comment.id}) }}">Modifier</a>
        <a href="{{ path('app_comments_delete', {'id': comment.id}) }}">Supprimer</a>
        
    {% endfor %}

    <h2>Laisser un commentaire</h2>
    {{ include('comments/_form.html.twig') }}


{% endblock %}
