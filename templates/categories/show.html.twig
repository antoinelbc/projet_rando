{% extends 'base.html.twig' %} {% block title %}{{ category.name }}{% endblock
%} {% block body %}
<div class="global-container">
  <h1>{{ category.name }}</h1>

  <div class="categories-table_container show-categories_container">
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Nom</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ category.id }}</td>
          <td>{{ category.name }}</td>
          <td class="actions-btn_container">
            <div class="admin-btn_container">
              <a href="{{ path('app_categories_edit', { id: category.id }) }}"
                >Modifier</a
              >
            </div>
            <div class="admin-btn_container">
              {{ include("categories/_delete_form.html.twig") }}
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="admin-btn_container">
    <a href="{{ path('app_categories_index') }}">Retour</a>
  </div>
</div>
{% endblock %}
