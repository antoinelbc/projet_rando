<header class="header">

    <div class="bar_container">
        
        <a href="/">
            <div class="logo_container adaptive-img--cover">
                <span>
                    <img
                        src="{{ asset('assets/images/logo.png') }}"
                        alt="logo"
                    />
                </span>
            </div>
        </a>

        <!-- DESKTOP NAV -->
        <nav class="main-nav">
            <div class="main-nav_container">
                <ul class="main-nav_list">
                    <li class="main-nav__item">
                        <a href="/" class="main-nav__link">Accueil</a>
                    </li>
                    <li class="main-nav__item">
                        <a href="/about" class="main-nav__link">A propos</a>
                    </li>
                    <li class="main-nav__item">
                        <a href="/activities" class="main-nav__link">Activités</a>
                    </li>
                    <li class="main-nav__item">
                        <a href="/blog" class="main-nav__link">Blog</a>
                    </li>
                    <li class="main-nav__item">
                        <a href="/prices" class="main-nav__link">Tarifs</a>
                    </li>
                    <li class="main-nav__item">
                        <a href="/contact" class="main-nav__link">Contact</a>
                    </li>

                    <!-- User nav with submenu -->
                    <li class="main-nav__item">
                    {% if app.user %}
                        <div class="hello-user_container">
                            <p class="hello_user">
                                Bonjour <span>{{ app.user.firstname }}</span>
                            </p>
                            <a
                                href="{{ path('app_logout') }}"
                                class="main-nav__link"
                                ><i
                                    class="fa-solid fa-arrow-right-from-bracket"
                                ></i
                            ></a>
                        </div>
                    </li>
                    {% else %}
                    <li class="main-nav__item">
                        <a href="/login" class="main-nav__link">
                            <i class="fa-solid fa-circle-user"></i>
                        </a>
                        <div class="submenu_container">
                            <ul class="main-nav_list submenu_list">
                                <li class="main-nav__item submenu__item">
                                    <a
                                        href="/login"
                                        class="main-nav__link submenu__link"
                                        >Se connecter</a
                                    >
                                </li>
                                <li class="main-nav__item submenu__item">
                                    <a
                                        href="/register"
                                        class="main-nav__link submenu__link"
                                        >S'inscrire</a
                                    >
                                </li>
                            </ul>
                        </div>
                    </li>
                    {% endif %} 
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="main-nav__item admin__item">
                        <a href="#" class="main-nav__link">Espace Admin</a>
                        <div class="submenu-admin_container">
                            <ul class="main-nav_list submenu_list">
                                <li class="main-nav__item submenu__item">
                                    <a
                                        href="/categories"
                                        class="main-nav__link submenu__link"
                                        >Gestion des catégories</a
                                    >
                                </li>
                                <li class="main-nav__item submenu__item">
                                    <a
                                        href="/articles"
                                        class="main-nav__link submenu__link"
                                        >Gestion des articles</a
                                    >
                                </li>
                                <li class="main-nav__item submenu__item">
                                    <a
                                        href="/comments"
                                        class="main-nav__link submenu__link"
                                        >Gestion des commentaires</a
                                    >
                                </li>
                            </ul>
                        </div>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </div>

    <!-- MOBILE AND TABLET MENU -->
    <nav class="hamburger-menu_nav">
        <div class="hamburger-menu_container">
            <ul class="hamburger-menu">
                <li><a class="hamburger-menu_item" href="/">Accueil</a></li>
                <li>
                    <a class="hamburger-menu_item" href="/about">A propos</a>
                </li>
                <li>
                    <a class="hamburger-menu_item" href="/activities"
                        >Activités</a
                    >
                </li>
                <li><a class="hamburger-menu_item" href="/blog">Blog</a></li>
                <li>
                    <a class="hamburger-menu_item" href="/prices">Tarifs</a>
                </li>
                <li>
                    <a class="hamburger-menu_item" href="/contact">Contact</a>
                </li>

                <div class="user-block_mobile">
                    {% if app.user %}
                    <div class="hello-user_container">
                        <p class="hello_user">
                            Bonjour <span>{{ app.user.firstname }}</span>
                        </p>
                        <a
                            href="{{ path('app_logout') }}"
                            class="hamburger-menu_item logout-mobile"
                            ><i class="fa-solid fa-arrow-right-from-bracket"></i
                        ></a>
                    </div>
                    {% else %}
                    <li>
                        <a href="/login" class="hamburger-menu_item"
                            >Se connecter</a
                        >
                    </li>
                    <li>
                        <a href="/register" class="hamburger-menu_item"
                            >S'inscrire</a
                        >
                    </li>
                </div>
                {% endif %} {% if is_granted('ROLE_ADMIN') %}

                <div class="admin-block_mobile">
                    <li>
                        <a href="/categories" class="hamburger-menu_item"
                            >Gestion des catégories</a
                        >
                    </li>
                    <li>
                        <a href="/articles" class="hamburger-menu_item"
                            >Gestion des articles</a
                        >
                    </li>
                    <li>
                        <a href="/comments" class="hamburger-menu_item"
                            >Gestion des commentaires</a
                        >
                    </li>
                </div>
                {% endif %}
            </ul>

            <button class="hamburger">
                <i class="burger-icon fa-solid fa-bars"></i>
                <i class="close-icon fa-solid fa-xmark"></i>
            </button>
            <button class="to-the-top">
                <i class="arrow-up-icon fa-solid fa-arrow-up"></i>
            </button>
        </div>
    </nav>
</header>
